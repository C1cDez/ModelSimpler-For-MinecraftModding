{
    "multipart": [
        {
            "when": {
                "up": "true"
            },
            "apply": {
                "model": "#{modId}:block/#{id}_post"
            }
        },
        {
            "when": {
                "north": "low"
            },
            "apply": {
                "model": "#{modId}:block/#{id}_side",
                "uvlock": true
            }
        },
        {
            "when": {
                "east": "low"
            },
            "apply": {
                "model": "#{modId}:block/#{id}_side",
                "y": 90,
                "uvlock": true
            }
        },
        {
            "when": {
                "south": "low"
            },
            "apply": {
                "model": "#{modId}:block/#{id}_side",
                "y": 180,
                "uvlock": true
            }
        },
        {
            "when": {
                "west": "low"
            },
            "apply": {
                "model": "#{modId}:block/#{id}_side",
                "y": 270,
                "uvlock": true
            }
        },
        {
            "when": {
                "north": "tall"
            },
            "apply": {
                "model": "#{modId}:block/#{id}_side_tall",
                "uvlock": true
            }
        },
        {
            "when": {
                "east": "tall"
            },
            "apply": {
                "model": "#{modId}:block/#{id}_side_tall",
                "y": 90,
                "uvlock": true
            }
        },
        {
            "when": {
                "south": "tall"
            },
            "apply": {
                "model": "#{modId}:block/#{id}_side_tall",
                "y": 180,
                "uvlock": true
            }
        },
        {
            "when": {
                "west": "tall"
            },
            "apply": {
                "model": "#{modId}:block/#{id}_side_tall",
                "y": 270,
                "uvlock": true
            }
        }
    ]
}
